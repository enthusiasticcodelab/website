{
  "name": "Node.js & TypeScript",
  "image": "ghcr.io/enthusiasticcodelab/typescript-node:latest",
  "features": {
    "ghcr.io/devcontainers-contrib/features/zsh-plugins:0": {
      "omzPlugins": "https://github.com/z-shell/F-Sy-H https://github.com/zsh-users/zsh-autosuggestions",
      "plugins": "git F-Sy-H zsh-autosuggestions"
    },
    "ghcr.io/stuartleeks/dev-container-features/shell-history:0": {},
    "ghcr.io/devcontainers/features/java": ""
  },
  "postCreateCommand": {
    "installGlobalDependencies": "pnpm install"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "antfu.open-in-github-button",
        "bierner.markdown-emoji",
        "dbaeumer.vscode-eslint",
        "eamodio.gitlens",
        "ibm.output-colorizer",
        "mhutchie.git-graph",
        "ms-azuretools.vscode-docker",
        "mutantdino.resourcemonitor",
        "sonarsource.sonarlint-vscode",
        "streetsidesoftware.code-spell-checker",
        "usernamehw.errorlens",
        "yoavbls.pretty-ts-errors",
        "yzhang.markdown-all-in-one"
      ],
      "settings": {
        "editor.detectIndentation": false,
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "files.encoding": "utf8",
        "files.eol": "\n",
        "files.insertFinalNewline": true,
        "files.trimTrailingWhitespace": true,
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": true,
          "source.fixAll": false,
          "source.organizeImports": false
        },
        "editor.formatOnSave": false,
        "editor.formatOnSaveMode": "modificationsIfAvailable",
        "editor.formatOnType": false,
        "eslint.codeActionsOnSave.mode": "problems",
        "eslint.validate": [
          "html",
          "javascript",
          "json",
          "json5",
          "jsonc",
          "markdown",
          "typescript",
          "vue",
          "yaml"
        ],
        "dotfiles.repository": "enthusiasticcodelab/dotfiles",
        "errorLens.excludeBySource": [
          "cSpell",
          "eslint"
        ],
        "errorLens.fontStyleItalic": true,
        "errorLens.fontWeight": "100",
        "editor.rulers": [
          80,
          120
        ],
        "editor.wordWrapColumn": 120,
        "typescript.tsdk": "node_modules/typescript/lib",
        "typescript.updateImportsOnFileMove.enabled": "always"
      }
    }
  }
}
